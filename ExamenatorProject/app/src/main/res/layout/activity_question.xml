<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionActivity"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="5"
        android:layout_marginLeft="@dimen/margin_button_que_side"
        android:layout_marginRight="@dimen/margin_button_que_side"
        android:layout_marginTop="@dimen/margin_button_que_top">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_button"/>

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_button_que_side">

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_button_que_side">

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_button_que_side">

    </Button>

    <Button
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_button_que_side">

    </Button>





</LinearLayout>